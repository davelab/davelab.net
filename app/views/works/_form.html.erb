<%= form_for @work,  :html => {:multipart => true} do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.collection_select(:category_id,
                           Category.all,
                           :id,
                           :name,
                          { :prompt => true })
  %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <!-- nasted images form -->
  <%= f.fields_for :images do |builder| %>
    <%= render 'image_fields', :f => builder %>
  <% end %>


 <p><%= link_to_add_fields "Add Images", f, :images %></p>
 <!-- end nasted images form -->

  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :realized_at %><br />
    <%= f.date_select :realized_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
